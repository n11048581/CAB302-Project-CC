<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test.fuelapp.ComparePageController">
   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="1200.0" spacing="20.0" style="-fx-background-color: #344E41;">
      <children>
         <Label alignment="CENTER" contentDisplay="CENTER" text="Header" textFill="WHITE" />
           <Button onAction="#map" text="Map" />
           <Button onAction="#handleCalculator" text="Fuel Efficient Calculator" />
           <Button onAction="#handleProfile" text="Change Settings in Profile" />
           <Button fx:id="button_logout" mnemonicParsing="false" onAction="#LogOut" text="Log Out" />
      </children>
   </HBox>

    <HBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: A3B18A;">
        <TextField fx:id="searchBar" onAction="#onEnter" prefWidth="200.0" />
        <Button onAction="#handleFilter" text="Search" />
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets top="20.0" />
      </padding>
    </HBox>
     <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: A3B18A;">
         <Label text="Sort by:" />
         <RadioButton fx:id="distanceRadioButton" onAction="#watchRadioButtons" prefHeight="17.0" prefWidth="79.0" selected="true" text="Distance">
         <toggleGroup>
            <ToggleGroup fx:id="Compare" />
         </toggleGroup>
      </RadioButton>
         <RadioButton fx:id="priceRadioButton" onAction="#watchRadioButtons" text="Price" toggleGroup="$Compare">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </RadioButton>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" right="50.0" />
      </padding>
     </HBox>
   <VBox style="-fx-background-color: A3B18A;" VBox.vgrow="ALWAYS">
      <children>
           <ScrollPane fx:id="comparePriceScrollPane" fitToHeight="true" fitToWidth="true" prefHeight="550.0" prefWidth="780.0" style="-fx-background-color: A3B18A;" VBox.vgrow="ALWAYS">
               <VBox fx:id="comparePriceBox" alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: A3B18A;">
               <children>
                  <HBox fx:id="hbox_search0" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="price_labels">
                     <children>
                        <Label fx:id="label_search0" textFill="#3a5a40">
                           <font>
                              <Font name="SansSerif Regular" size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox fx:id="hbox_search1" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search1" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox fx:id="hbox_search2" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search2" />
                     </children>
                  </HBox>
                  <HBox fx:id="hbox_search3" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search3" />
                     </children>
                  </HBox>
                  <HBox fx:id="hbox_search4" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search4" />
                     </children>
                  </HBox>
                  <Label fx:id="label_nothing_to_show" text="No Stations Avaliable :(" textFill="#3a5a40" visible="false">
                     <font>
                        <Font name="SansSerif Bold" size="30.0" />
                     </font>
                  </Label>
                  <HBox fx:id="hbox_search5" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search5" />
                     </children>
                  </HBox>
                  <HBox fx:id="hbox_search6" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search6" />
                     </children>
                  </HBox>
                  <HBox fx:id="hbox_search7" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search7" />
                     </children>
                  </HBox>
                  <HBox fx:id="hbox_search8" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search8" />
                     </children>
                  </HBox>
                  <HBox fx:id="hbox_search9" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_search9" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
           </ScrollPane>
      </children>
   </VBox>



    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: A3B18A;" VBox.vgrow="ALWAYS">
      <children>
         <Button fx:id="button_previous_page" mnemonicParsing="false" onAction="#PageBack" text="&lt; Previous Page" />
         <Button fx:id="button_next_page" mnemonicParsing="false" onAction="#PageForward" text="Next Page &gt;" />
      </children>
    </HBox>

</VBox>
